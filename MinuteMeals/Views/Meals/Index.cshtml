@model IList<Recipe>

<h1>Here we manage the recipes</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Cooking Time (in minutes)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <partial name="MealRowPartial" model="recipe"/>
        }
    </tbody>
</table>
<a asp-area="" asp-controller="Home" asp-action="Index">Homepage</a>